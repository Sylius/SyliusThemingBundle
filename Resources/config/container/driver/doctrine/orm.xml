<container xmlns="http://symfony.com/schema/dic/services"
           xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
           xsi:schemaLocation="http://symfony.com/schema/dic/services
                               http://symfony.com/schema/dic/services/services-1.0.xsd"
>

    <parameters>
        <parameter key="sylius_theming.manager.theme.class">Sylius\Bundle\ThemingBundle\Entity\ThemeManager</parameter>
    </parameters>

    <services>
        <service id="sylius_theming.manager.theme" class="%sylius_theming.manager.theme.class%">
            <argument type="service" id="doctrine.orm.default_entity_manager" />
            <argument>%sylius_theming.model.theme.class%</argument>
        </service>
    </services>

</container>
