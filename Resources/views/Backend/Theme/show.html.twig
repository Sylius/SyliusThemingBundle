{% extends 'SyliusThemingBundle::layout.html.twig' %}

{% block content %}

<div class="page-header"> 
    <h1>Theme details.</h1> 
</div>

<table>
    <thead>
        <tr>
            <th>#id</th>
            <th>name</th>
            <th>description</th>
            <th>version</th>
            <th>options</th>
        </tr>
    </thead>
    
    <tbody>
        <tr>
            <td>{{ theme.id }}</td>
            <td>{{ theme.name }}</td>
            <td>{{ theme.description }}</td>
            <td><span class="label notice">{{ theme.version }}</span></td>
            <td>
                <a href="{{ path('sylius_theming_backend_theme_activate', {'id': theme.id}) }}" class="btn primary">activate</a>
                <a href="{{ path('sylius_theming_backend_theme_show', {'id': theme.id}) }}" class="btn">details</a>              
                {% if theme.enabled %}
                    <a href="{{ path('sylius_theming_backend_theme_disable', {'id': theme.id}) }}" class="btn">disable</a>
                {% else %}
                    <a href="{{ path('sylius_theming_backend_theme_enable', {'id': theme.id}) }}" class="btn">enable</a>
                {% endif %}
                <a href="{{ path('sylius_theming_backend_theme_uninstall', {'id': theme.id}) }}"class="btn danger">uninstall</a>
            </td>
        </tr>
    </tbody>
</table>

{% endblock %}
